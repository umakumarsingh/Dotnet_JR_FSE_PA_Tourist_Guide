@model IList<TouristGuide.Entities.Destination>
<ul class="navbar-nav flex-grow-1 float-left">
    @foreach (var item in Model)
    {
        var url = item.Url;
        var target = "_self";

        if (url.StartsWith("~"))
        {
            url = Url.Content(url);
        }
        if (item.OpenInNewWindow)
        {
            target = "_blank";
        }
        <li class="nav-item"><a class="nav-link text-dark" href="@url" target="@target">@item.Name</a></li>
    }
</ul>